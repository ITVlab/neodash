<com.google.android.apps.muzei.util.DrawInsetsFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/draw_insets_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/local_render_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="200dp"
                android:text="@string/get_more_sources"
                android:id="@+id/button_sources"
                android:layout_marginBottom="48dp"
                android:layout_marginEnd="32dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="200dp"
                android:text="Wallpaper Display"
                android:id="@+id/button_display"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="48dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.apps.muzei.util.DrawInsetsFrameLayout>

